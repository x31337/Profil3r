{
  "name": "profil3r-quality-tools",
  "version": "1.0.0",
  "type": "module",
  "description": "Code quality and formatting tools for Profil3r project",
  "scripts": {
    "prepare": "cd .. && husky install",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --fix --config config/eslint.config.js",
    "format": "prettier --write . --config config/.prettierrc",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint --edit",
    "semantic-release": "semantic-release",
    "test": "python3 -m pytest tests/integration/python/ -v",
    "test-python": "python3 -m pytest tests/integration/python/ -v",
    "test-node": "cd tests/integration/node && npm test",
    "test-coverage": "python3 -m pytest tests/integration/python/ --cov=profil3r --cov-report=html --cov-report=term",
    "test-all": "npm run test-python && npm run test-node",
    "install-all": "cd tools && npm install && cd ../api && npm install && cd .. && npm install",
    "build": "cd tools && npm run build",
    "validate-all": "cd tools && npm run validate-all"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix --config config/eslint.config.js",
      "prettier --write --config config/.prettierrc"
    ],
    "*.{json,css,html,md,yml,yaml}": [
      "prettier --write --config config/.prettierrc"
    ],
    "*.py": [
      "black --config config/pyproject.toml",
      "isort --settings-path config/pyproject.toml",
      "flake8 --config config/pyproject.toml"
    ],
    "*.php": [
      "php-cs-fixer fix --config=config/.php-cs-fixer.php"
    ],
    "*.rb": [
      "rubocop -A --config config/.rubocop.yml"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "eslint": "^9.15.0",
    "@eslint/js": "^9.15.0",
    "prettier": "^3.3.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "semantic-release": "^22.0.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.3",
    "@semantic-release/npm": "^11.0.1",
    "conventional-changelog-conventionalcommits": "^7.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
