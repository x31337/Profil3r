{
  "environment": "development",
  "services": {
    "osint-framework": {
      "port": 8000,
      "enabled": true,
      "health_endpoint": "/api/health",
      "base_url": "http://localhost:8000"
    },
    "js-tools": {
      "port": 3000,
      "enabled": true,
      "health_endpoint": "/api/health",
      "base_url": "http://localhost:3000"
    },
    "facebook-messenger": {
      "port": 4444,
      "enabled": false,
      "health_endpoint": "/api/health",
      "base_url": "http://localhost:4444"
    }
  },
  "database": {
    "type": "sqlite",
    "path": "data/profil3r_dev.db",
    "enabled": false
  },
  "logging": {
    "level": "DEBUG",
    "file": "logs/profil3r_dev.log",
    "max_size": "10MB",
    "retention": 7
  },
  "monitoring": {
    "enabled": true,
    "interval": 30,
    "health_checks": true,
    "alerts": false
  },
  "testing": {
    "run_integration_tests": true,
    "run_security_tests": true,
    "coverage_threshold": 80
  },
  "build": {
    "python_compile": false,
    "minify_js": false,
    "optimize_images": false
  },
  "deployment": {
    "strategy": "rolling",
    "backup": false,
    "rollback_enabled": true
  }
}
